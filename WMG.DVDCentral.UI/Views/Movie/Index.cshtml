@model IEnumerable<WMG.DVDCentral.BL.Models.Movie>

@{
    ViewData["Title"] = "Index";
}
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table m-2">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ImagePath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InStkQty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RatingName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FormatName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DirectorName)
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <img src="~/images/@item.ImagePath"
                        class="imagepropsmall"
                        onclick="on('/images/@item.ImagePath')"
                        alt="@item.Description" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cost)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.InStkQty)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.RatingName)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.FormatName)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.DirectorName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id=item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
