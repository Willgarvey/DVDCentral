@model WMG.DVDCentral.UI.ViewModels.CustomerOrdersVM

@{
    ViewData["Title"] = "Index";
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Orders[0].Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customers[0].FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Users[0].UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Orders[0].OrderDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Orders[0].ShipDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Orders[0].Total)
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Orders) {
        <tr>
            <td>
                    @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                    @Model.Customers.FirstOrDefault(u => u.Id == item.CustomerId)?.FullName
            </td>
            <td>
                    @Model.Users.FirstOrDefault(u => u.Id == item.UserId)?.UserName
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.ShipDate)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Total)
            </td>

            <td>
                    <a class="btn btn-sm btn-primary" asp-route-id="@item.Id" asp-action="Edit">Edit</a>
                    <a class="btn btn-sm btn-primary" asp-route-id="@item.Id" asp-action="Details">Details</a>
                    <a class="btn btn-sm btn-primary" asp-route-id="@item.Id" asp-action="Delete">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
